<%= form_with(model:[@user, @tw], local: true) do |f| %>
    <%= render 'shared/error_messages', object: @tw %>

    <%= f.label :now_body_weight, class: "label" %>
    <%= f.text_field :now_body_weight, class: "form-control" %>
    
    <%= f.label :goal_body_weight, class: "label" %>
    <%= f.text_field :goal_body_weight, class: "form-control" %>
    
    <%= f.label :now_bodyfat_percentage, class: "label" %>
    <%= f.text_field :now_bodyfat_percentage, class: "form-control" %>

    <%= f.label :goal_bodyfat_percentage, class: "label" %>
    <%= f.text_field :goal_bodyfat_percentage, class: "form-control" %>

    <%= f.label :target_days, class: "label" %>
    <%= f.text_field :target_days, class: "form-control" %>

    <%= f.hidden_field :user_id, value: @user.id %>

    <%= f.submit yield(:btn_text), class: "btn btn-primary btn-block btn-setup" %>
    
    <% if "#{yield(:btn_text)}" == "編集" %>
      <%= link_to "戻る", @user, class: "btn btn-danger btn-block btn-setup" %>
    <% end %>
  <% end %>