<% provide(:title, "目標設定") %>

<div class= "weight-new">
  <h1>目標設定</h1>
  <%= form_with(model:[@user,@tw], local: true) do |f| %>
    <%= render 'shared/error_messages', object: @tw %>

    <%= f.label :body_weight, class: "label" %>
    <%= f.text_field :body_weight, class: "form-control" %>

    <%= f.label :bodyfat_parcentage, class: "label" %>
    <%= f.text_field :bodyfat_parcentage, class: "form-control" %>

    <%= f.label :target_days, class: "label" %>
    <%= f.text_field :target_days, class: "form-control" %>

    <%= f.hidden_field :user_id, value: @user.id %>

    <%= f.submit "登録", class: "btn btn-primary btn-block btn-setup" %>
  <% end %>
</div>
