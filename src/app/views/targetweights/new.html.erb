<% provide(:title, "目標設定") %>

<div class= "weight-new">
  <h1>目標設定</h1>
  <%= form_with(model: @user, local: true) do |f| %>

    <%= f.label :body_weight, class: "label-weight" %>
    <%= f.text_field :body_weight, class: "form-control" %>

    <%= f.label :bodyfat_parcentag, class: "label-weight" %>
    <%= f.text_field :bodyfat_parcentag, class: "form-control" %>

    <%= f.label :target_days, class: "label-weight" %>
    <%= f.text_field :target_days, class: "form-control" %>

    <%= f.submit "登録", class: "btn btn-primary btn-block btn-setup" %>
  <% end %>
</div>
