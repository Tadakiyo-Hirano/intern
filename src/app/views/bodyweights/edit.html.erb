<div class="bodyweights_flame">
  <h1>Bodyweights#edit</h1>
  <p>Find me in app/views/bodyweights/edit.html.erb</p>
  
  <%= form_with(model: @body_weight, url: user_bodyweight_path, method: :patch, local: true) do |f| %>
  
    <%= f.label :body_weight, class: "label-form" %>
    <%= f.number_field :body_weight, class: "form-control" %>
  
    <%= f.label :bodyfat_percentage, class: "label-form" %>
    <%= f.number_field :bodyfat_percentage, class: "form-control" %>
    
    <%= f.submit "更新", class: "btn btn-lg btn-success btn-form" %>
  
  <% end %>
</div>