<div class="col col-md-8 offset-md-2">
  <div class="admin-box1 center">
    管理者画面
  </div>

  <div class="admin-box2">
    <nav>
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-category-tab" data-toggle="tab" href="#nav-category" role="tab" aria-controls="nav-category" aria-selected="true" style="border: 0.5px solid #f8f9fa;">カテゴリー</a>
        <a class="nav-item nav-link" id="nav-user-tab" data-toggle="tab" href="#nav-user" role="tab" aria-controls="nav-user" aria-selected="false" style="border: 0.5px solid #f8f9fa;">ユーザー</a>
        <a class="nav-item nav-link" id="nav-admin-tab" data-toggle="tab" href="#nav-admin" role="tab" aria-controls="nav-admin" aria-selected="false" style="border: 0.5px solid #f8f9fa;">管理者設定</a>
      </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-category" role="tabpanel" aria-labelledby="nav-category-tab">
        <%= render 'exercise_categories/index' %>
      </div>
      <div class="tab-pane fade" id="nav-user" role="tabpanel" aria-labelledby="nav-user-tab">
        ここにユーザー一覧
      </div>
      <div class="tab-pane fade" id="nav-admin" role="tabpanel" aria-labelledby="nav-admin-tab">
        ここに管理者設定
      </div>
    </div>

    <div class="">
      <div class="mb-1">
        <%= link_to "ユーザー", "#", class: "btn btn-original w-25" %>
        <span class="admin-menu">登録件数：<%= User.count %>件</span>
      </div>

      <div class="mb-1 mt-5">
        <%= link_to "管理者情報", edit_admin_registration_path, class: "btn btn-original w-25" %>
      </div>
      <div class="mb-1">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-secondary w-25" %>
      </div>
    </div>
  </div>
</div>
