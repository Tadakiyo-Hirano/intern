<script src="./asset/bootstrap-transition.js"></script>
<script src="./asset/bootstrap-tab.js"></script>
<div class="col col-md-12">
  <!-- <div class="admin-box center">
    運動カテゴリ一覧
  </div> -->

  <div class="admin-box">
    <%= link_to '新規登録', new_exercise_category_path, class: "btn btn-sm btn-original" %>
  </div>

  <div class="admin-box">
    <table class="table table-sm table-bordered table-striped">
      <thead class="thead-original">
        <tr>
          <th><%= ExerciseCategory.human_attribute_name :name %></th>
          <th>コンテンツ数</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td class="center" style="width: 130px"><%= category.exercise_contents.count %></td>
            <td class="center" style="width: 100px">
              <%= link_to '編集', edit_exercise_category_path(category), class: "exercise_categoty-table-edit" %>
            </td>
            <td class="center" style="width: 100px">
              <%= link_to '削除', exercise_category_path(category), method: :delete,
                                                                    class: "exercise_categoty-table-delete",
                                                                    data: { confirm: "本当に削除しますか？" }  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= paginate @categories %>