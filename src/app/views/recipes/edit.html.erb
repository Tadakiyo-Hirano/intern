
<div class="box1">
  <%= form_with(model: @recipe, url: user_recipe_path(@user, @recipe, todaymeal_recipe_id: params[:todaymeal_recipe_id], before: params[:action], timezone_id: params[:timezone_id], start_date: params[:start_date], start_time: params[:start_time]), method: :patch, local: true) do |f| %>
    
      <%= f.label :recipe_name, class: "label-form" %><br>
      <%= f.text_field :recipe_name, class: "form-control" %><br>
    
    <%= f.submit "更新", class: "btn btn-lg btn-original btn-form" %>
    
  <% end %>
</div>