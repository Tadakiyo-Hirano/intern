
<div class="row">
  <div class="col-md-12">
    <div class="tab-area">
      <div class="tab active">
        胸
      </div>
      <% @bodyparts.each do |bodypart| %>
        <div class="tab">
          <%= bodypart.body_part %>
        </div>
      <% end %>
    </div>
    <div class="content-area">
      <div class="content show">
        <% @traningtypes.each do |traningtype| %>
          <h2><%= traningtype.traning_type %></h2>
          <%= link_to(new_user_traningevent_path(current_user, traningtype_id: traningtype, bodypart_id: 1, today_traning_id: @today_traning, start_time: params[:start_time], start_date: params[:start_date])) do %>
            <i class="far fa-plus-square fa-2x"></i>
          <% end %>
          <table class="table table-striped">
            <tbody>
              <% @traningevents = @user.traningevents.where(body_part: "胸", traning_type: traningtype.traning_type) %>
              <% @traningevents.each do |traningevent| %>
                <tr>
                  <td><%= link_to traningevent.traning_name, user_today_traning_path(@user, @today_traning, start_time: params[:start_time], start_date: params[:start_date]) %></td>
                  <td>
                    <%= link_to(user_traningevent_path(@user, traningevent, today_traning_id: @today_traning, start_time: params[:start_time], start_date: params[:start_date])) do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
      <% @bodyparts.each do |bodypart| %>
        <div class="content">
          <% @traningtypes.each do |traningtype| %>
            <h2><%= traningtype.traning_type %></h2>
            <%= link_to(new_user_traningevent_path(current_user, traningtype_id: traningtype, bodypart_id: bodypart, today_traning_id: @today_traning, start_time: params[:start_time], start_date: params[:start_date])) do %>
              <i class="far fa-plus-square fa-2x"></i>
            <% end %>
            <table class="table table-striped">
              <tbody>
                <% @traningevents = @user.traningevents.where(body_part: bodypart.body_part, traning_type: traningtype.traning_type) %>
                <% @traningevents.each do |traningevent| %>
                  <tr>
                    <td><%= link_to traningevent.traning_name, user_traningevent_path(@user, traningevent, today_traning_id: @today_traning) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>