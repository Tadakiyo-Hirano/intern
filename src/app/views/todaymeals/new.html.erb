<% provide(:title, "食事記録") %>
<% provide(:btn_text, "記録") %>

<%= link_to(edit_user_myfood_path(@user, @myfood, recipe_id: params[:recipe_id], timezone_id: params[:timezone_id], start_time: params[:start_time], start_date: params[:start_date])) do %>
<div class="box1">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= Myfood.human_attribute_name(:food_name) %></th>
            <th><%= Myfood.human_attribute_name(:calorie) %></th>
            <th><%= Myfood.human_attribute_name(:protein) %></th>
            <th><%= Myfood.human_attribute_name(:fat) %></th>
            <th><%= Myfood.human_attribute_name(:carbo) %></th>
            <th><%= Myfood.human_attribute_name(:sugar) %></th>
            <th><%= Myfood.human_attribute_name(:dietary_fiber) %></th>
            <th><%= Myfood.human_attribute_name(:salt) %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><%= @myfood.food_name %></th>
            <td><%= @myfood.calorie %></td>
            <td><%= @myfood.protein %></td>
            <td><%= @myfood.fat %></td>
            <td><%= @myfood.carbo %></td>
            <td><%= @myfood.sugar %></td>
            <td><%= @myfood.dietary_fiber %></td>
            <td><%= @myfood.salt %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>


<div class="box1">
  <div class="row">
    <div class="mx-auto">
      <h4>【<%= params[:start_time] %>】の【<%= @timezone.time_zone %>】に【<%= @myfood.food_name %>】を記録</h4>
    </div>
    <div class="col-12">
      <%= form_with(model: @todaymeal, url: user_todaymeals_path(@user, myfood_id: params[:myfood_id], timezone_id: params[:timezone_id], start_date: params[:start_date], start_time: params[:start_time]), method: :post, local: true) do |f| %>
        
        <%= f.label :amount, class: "label-form" %><br>
        <%= f.number_field :amount, class: "form-control" %><br>
        
        <%= f.label :note, class: "label-form" %><br>
        <%= f.number_field :note, class: "form-control" %><br>
        
        <%= f.hidden_field :start_time, value: params[:start_time] %>
        <%= f.hidden_field :timezone_id, value: params[:timezone_id] %>
        <%= f.hidden_field :myfood_id, value: params[:myfood_id] %>
    </div>
    <div class="mx-auto">
        <%= f.submit yield(:btn_text), class: "btn btn-lg btn-original btn-form" %>
        <%= link_to "戻る", user_myfoods_path(@user, timezone_id: params[:timezone_id], start_date: params[:start_date], start_time: params[:start_time]), class: "btn btn-lg btn-default btn-form" %>
    </div>    
      <% end %>
  </div>
</div>