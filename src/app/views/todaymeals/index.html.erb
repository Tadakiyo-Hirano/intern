<div class="box1">
  <div class="row">
    <div class="col-md-3 offset-md-5 align-self-center">
      <%= link_to(user_todaymeals_path(current_user, start_time: params[:start_time].to_date.yesterday, start_date: params[:start_date].to_date.prev_month)) do %>
        <div class="arrow round-arrow-left"></div>
      <% end %>
      <a style="color: #274277;"><%= params[:start_time] %></a>
      <% unless params[:start_time].to_date.tomorrow == Time.current.to_date.tomorrow %>
        <%= link_to(user_todaymeals_path(current_user, start_time: params[:start_time].to_date.tomorrow, start_date: params[:start_date].to_date.next_month)) do %>
          <div class="arrow round-arrow-right"></div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-3 align-self-center">
      <%= link_to(user_bodyweights_calender_path(current_user, start_time: params[:start_time], start_date: params[:start_date]), remote: true) do %>
        <div class="calendar"></div>
      <% end %>
    </div>
  </div>
</div>

<div class="box1">
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <% @attribute_names.each do |attribute_name| %>
                <th><%= attribute_name %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
              <% @timezone_meals.each do |timezone, recipe_myfood| %>
              <tr>
                <th><%= timezone.time_zone %></th>
                <% recipe_myfood.each do |recipemyfood| %>
                  <td><%= recipemyfood %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th>合計</th>
              <% @day_totalmeals.each do |totalmeal| %>
                <th><%= totalmeal %></th>
              <% end %>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="box1">
  <div class="row">
    <div class="col-md-12">
      <canvas id="myPieChart" width="500" height="100"></canvas>
      <script>myfood_graph();</script>
    </div>
  </div>
</div>

<% @timezone_meals.each do |timezone, recipe_myfood, recipe, myfood| %>
  <div class="box1">
    <div class="row">
      <div class="col-md-1 offset-md-11 align-self-center">
        <%= link_to(user_recipes_path(current_user, timezone_id: timezone, start_time: params[:start_time], start_date: params[:start_date]), class: "text-original") do %>
          <i class="far fa-plus-square fa-2x"></i>
        <% end %>
      </div>
      <div class="col-12">
        <div class="panel-group">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="panel-title">
                <a class="text-original" data-toggle="collapse" href="#collapse<%= timezone.id %>">
                  <div class="row">
                    <div class="col-md-2">
                      <h4><%= timezone.time_zone %></h4>
                    </div>
                    <div class="table-responsive">
                      <table class="table table-sm">
                        <thead>
                          <tr>
                            <% @attribute_names.each do |attribute_name| %>
                              <th><%= attribute_name %></th>
                            <% end %>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <% recipe_myfood.each do |recipemyfood| %>
                              <th><%= recipemyfood %></th>
                            <% end %>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </a>
              </div>
            </div>
            <div id="collapse<%= timezone.id %>" class="panel-collapse collapse">
              <%= render partial: "myfood", locals: { timezone: timezone }%>
              <%= render partial: "recipe", locals: { timezone: timezone }%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

