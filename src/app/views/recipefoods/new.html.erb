<% provide(:title, "#{@recipe.recipe_name}の食材登録") %>
<% provide(:btn_text, "記録") %>

<%= link_to(edit_user_myfood_path(@user, @myfood, recipe_id: params[:recipe_id], timezone_id: params[:timezone_id], start_time: params[:start_time], start_date: params[:start_date])) do %>
<div class="box1">
  <div class="row">
    <div class="col-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= Myfood.human_attribute_name(:food_name) %></th>
            <th><%= Myfood.human_attribute_name(:calorie) %></th>
            <th><%= Myfood.human_attribute_name(:protein) %></th>
            <th><%= Myfood.human_attribute_name(:fat) %></th>
            <th><%= Myfood.human_attribute_name(:carbo) %></th>
            <th><%= Myfood.human_attribute_name(:sugar) %></th>
            <th><%= Myfood.human_attribute_name(:dietary_fiber) %></th>
            <th><%= Myfood.human_attribute_name(:salt) %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><%= @myfood.food_name %></th>
            <td><%= @myfood.calorie %></td>
            <td><%= @myfood.protein %></td>
            <td><%= @myfood.fat %></td>
            <td><%= @myfood.carbo %></td>
            <td><%= @myfood.sugar %></td>
            <td><%= @myfood.dietary_fiber %></td>
            <td><%= @myfood.salt %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>

<div class="box1">
  <div class="row">
    <div class="col-12">
      <%= form_with(model: @recipefood, url: user_recipefoods_path(@user, recipe_id: params[:recipe_id], myfood_id: params[:myfood_id], timezone_id: params[:timezone_id], start_date: params[:start_date], start_time: params[:start_time]), method: :post, local: true) do |f| %>
        
        <%= f.label :amount, class: "label-form" %><br>
        <%= f.number_field :amount, :placeholder => "分量", step: '0.1', class: "form-control" %>
        
        <%= f.hidden_field :recipe_id, value: params[:recipe_id] %>
        <%= f.hidden_field :myfood_id, value: params[:myfood_id] %>
    </div>
    <div class="mx-auto">
        <%= f.submit yield(:btn_text), class: "btn btn-lg btn-original btn-form" %>
        <%= link_to "戻る", user_recipefoods_path(@user, recipe_id: params[:recipe_id], timezone_id: params[:timezone_id], start_date: params[:start_date], start_time: params[:start_time]), class: "btn btn-lg btn-default btn-form" %>
      <% end %>
    </div>
  </div>
</div>