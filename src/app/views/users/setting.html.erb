<div class="box1">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= link_to "目標編集", edit_user_targetweight_path(@user, @target_weight, start_date: params[:start_date], start_time: params[:start_time]), class: "btn btn-md btn-primary btn-edit" %>
      <%= link_to "基本設定編集", edit_user_bmr_path(@user, @bmr, startw_date: params[:start_date], start_time: params[:start_time]), class: "btn btn-md btn-primary btn-edit" %>
      <% if @pfc.present? %>
        <%= link_to "PFC", edit_user_pfc_ratio_path(@user, @pfc, start_date: params[:start_date], start_time: params[:start_time]), class: "btn btn-md btn-primary" %>
      <% else %>
        <%= link_to "PFC", new_user_pfc_ratio_path(@user, @pfc, start_date: params[:start_date], start_time: params[:start_time]), class: "btn btn-md btn-primary" %>
      <% end %>
      </div>
    <div class="col-md-12 offset-md-1">
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th scope="col">基礎代謝</th>
            <th scope="col">1日摂取カロリー</th>
            <th scope="col">1日の可能摂取カロリー</th>
            <th scope="col">たんぱく質</th>
            <th scope="col">脂質</th>
            <th scope="col">炭水化物</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= bmr_format(@bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age).floor(1) %>kcal
            </td>
            <td>
              <%= bmr_format_activty(bmr_format(@bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age), @bmr.activity).floor(1) %>kcal
            </td>
            <td>
              <%= 
                one_day_decrease(
                                  bmr_format_activty(
                                                      bmr_format(
                                                                  @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age
                                                                ), 
                                                                @bmr.activity
                                                    ).floor(1),
                                  @target_weight
                                )  
              %>kcal
            </td>
            
            <% if @pfc.present? %>
            
              <!--たんぱく質-->
              <td>
                <!--g-->
                <%= pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                pfc_ratios_protein(@pfc.protein), 
                                4
                              ) 
                %>g
                <!--kcal-->
                ( <%= (pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                  pfc_ratios_protein(@pfc.protein), 
                                  4
                                 ) * 4).floor(1)
                  %>kcal )
              </td>
              
              <!--脂質-->
              <td>
                <!--g-->
                <%= pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                pfc_ratios_fat(@pfc.fat), 
                                9
                              ) 
                %>g
                <!--kcal-->
                ( <%= (pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                   pfc_ratios_fat(@pfc.fat), 
                                   9
                                 ) * 9).floor(1)
                  %>kcal )
              </td>
              <!--炭水化物-->
              <td>
                <!--g-->
                <%= pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                pfc_ratios_carbo(@pfc.carbo), 
                                4
                              ) 
                %>g
                <!--kcal-->
                ( <%= (pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                   pfc_ratios_carbo(@pfc.carbo), 
                                   4
                                 ) * 4 ).floor(1)
                  %>kcal )
              </td>
              
            <% else %>
            
              <!--たんぱく質-->
              <td>
                <!--g-->
                <%= pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                20, 
                                4
                              ) 
                %>g
                <!--kcal-->
                ( <%= (pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                  20, 
                                  4
                                 ) * 4).floor(1)
                  %>kcal )
              </td>
              
              <!--脂質-->
              <td>
                <!--g-->
                <%= pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                20, 
                                9
                              ) 
                %>g
                <!--kcal-->
                ( <%= (pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                   20, 
                                   9
                                 ) * 9).floor(1)
                  %>kcal )
              </td>
              <!--炭水化物-->
              <td>
                <!--g-->
                <%= pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                60, 
                                4
                              ) 
                %>g
                <!--kcal-->
                ( <%= (pfc_format( one_day_decrease( bmr_format_activty( bmr_format( @bmr.gender, @target_weight.now_body_weight, @newwest_bodyweight.sum, @bmr.height, @bmr.age ), @bmr.activity ).floor(1), @target_weight ), 
                                   60, 
                                   4
                                 ) * 4 ).floor(1)
                  %>kcal )
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
