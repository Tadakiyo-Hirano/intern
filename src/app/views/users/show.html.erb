
<!--その他仮置き-->

<div class= "user-show">
  <h1>Users#show</h1>
  <p>Find me in app/views/users/show.html.erb</p>
  <div><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></div>
  <div>ログインしているユーザー[<%= current_user.username %>]</div>
  <div><%= link_to "ユーザー情報変更", edit_user_registration_path %></div>
  <div>日にち<%= params[:start_time] %></div>
  <div><%= link_to "体重追加", new_user_bodyweight_path(current_user, start_time: params[:start_time]) if @body_weight.blank? %></div>
  <% if @body_weight.present? %>
    <div>本日の体重は<%= @body_weight.body_weight %>kgです</div>
    <%= 
      link_to "体重編集", edit_user_bodyweight_path(
      user_id: current_user, id: params[:bodyweight_id], start_time: params[:start_time])
    %>
  <% end %>
</div>

<!--カレンダー-->
<div class="calender">
  <%= month_calendar events: @body_weights do |date, events| %>
      <%= link_to date.day, user_path(current_user, start_time: date, start_date: params[:start_date]) %>
      <% events.each do |event| %>
        <div>
          <%= event.body_weight %>kg
        </div>
      <% end %>
  <% end %>
</div>

<!--グラフ-->

