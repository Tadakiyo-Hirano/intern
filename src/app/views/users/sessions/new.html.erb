<div class="jumbotron">
  BODY MAKE APP
</div>

<div class="login-box1">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>ログイン</h2>
      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div><br />
      
      <div class="box-action">
        <%= f.submit "ログイン" %>
        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>
    
    <%= link_to(user_google_oauth2_omniauth_authorize_path, class: "btn btn-md btn-default btn-block") do %>
      <i class="fab fa-google"></i>  Sign in with Google
    <% end %>
    
    <%= link_to(user_facebook_omniauth_authorize_path, class: "btn btn-md btn-original btn-block") do %>
      <i class="fab fa-facebook"></i>  Sign in with Facebook
    <% end %>
    <br>
    <!--<div class="icon-size"><= link_to (image_tag "google_icon.png"), user_google_oauth2_omniauth_authorize_path %></div>-->
    <!--<div class="icon-size"><= link_to (image_tag "facebook_icon.png"), user_facebook_omniauth_authorize_path %></div>-->
    
    <div class="box-newusr">
      <%= link_to "アカウントを作成", new_user_registration_path %>
    </div>
  </div>
</div><br>