
<%= render "layouts/traning_tab" %>

<% if params[:bodypart_id].present? && params[:traningevent_id].present? && params[:traningtype_id].present? %>
<div class="box1">
  <div class="row">
    <div class="col-12">
      <h5>
        <%= @traningevent.traning_name %>
        <%= link_to(user_traningevent_path(@user, params[:traningevent_id], traningtype_id: params[:traningtype_id], bodypart_id: params[:bodypart_id], start_time: params[:start_time], start_date: params[:start_date]), class: "text-original") do %>
          <i class="fas fa-edit fa-sm"></i>
        <% end %>
      </h5>
    </div>
    <style>
      h5 {
        padding: 1rem 2rem;
        border-left: 5px solid #274277;
        background: #f4f4f4;
      }
      @media screen and (max-width: 428px) {
        
      }
    </style>
    <div class="col-1 offset-11 align-self-center">
      <%= link_to(user_today_tranings_path(@user, traningevent_id: @traningevent, start_time: params[:start_time], start_date: params[:start_date]), method: :post, class: "text-original") do %>
        <i class="far fa-plus-square fa-lg"></i>
      <% end %>
    </div>
    <% @today_tranings.each_with_index do |item, i| %>
    <% @today_traning = @user.today_tranings.find(item) %>
      <div class="col-1 align-self-center text-original">
        <%= i + 1 %>セット
      </div>
      <div class="col-10 align-self-center">
        
        <%= form_with(model:@today_traning, url: user_today_traning_path(@user, @today_traning, traningevent_id: @traningevent, start_time: params[:start_time], start_date: params[:start_date]), method: :patch, local: true) do |f| %>
      
          <%= f.number_field :traning_weight, step: '0.1', :placeholder => "挙上重量", class: "form-control" %><br>
          
          <%= f.number_field :traning_reps, step: '0.1', autofocus: true, :placeholder => "挙上回数", step: '0.1', class: "form-control" %><br>
          
          <%= f.text_area :traning_note, autofocus: true, :placeholder => "MEMO", class: "form-control" %><br>
          
          <%= f.hidden_field :bodypart_id, value: @traningevent.bodypart_id %>
      
          <%= f.submit "記録", class: "btn btn-original btn-block btn-setup" %><br>
          
        <% end %>
      </div>
      <div class="col-1 align-self-center">
        <% if (i + 1) > 3  %>
          <%= link_to(user_today_traning_path(@user, @today_traning, traningevent_id: @traningevent, start_time: params[:start_time], start_date: params[:start_date]), method: :delete, class: "text-original") do %>
            <i class="fas fa-trash-alt fa-lg"></i>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% end %>