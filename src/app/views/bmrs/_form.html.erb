  <%= form_with(model: [@user, @bmr], local: true) do |f| %>
    <%= render 'shared/error_messages', object: @bmr %>


    <%= f.label :gender, class: "label" %>
    <%= f.select :gender, {'男性':"男性", '女性':"女性"}, {include_blank: "選択してください"}, class: "form-control" %>

    <%= f.label :age, class: "label" %>
    <%= f.number_field :age, class: "form-control" %>

    <%= f.label :height, class: "label" %>
    <%= f.number_field :height, step: '0.1', class: "form-control" %>
    
    <%= f.label :activity, class: "label" %>
    <%= f.select :activity, activity_select, {include_blank: "選択してください"}, class: "form-control" %>

    <%= f.hidden_field :user_id, value: @user.id %>

    <%= f.submit yield(:btn_text), class: "btn btn-primary btn-block btn-setup" %>
    <% if "#{yield(:btn_text)}" == "編集" %>
      <%= link_to "戻る", user_path(@user, start_date: params[:start_date], start_time: params[:start_time]), class: "btn btn-danger btn-block btn-setup" %>
    <% end %>
  <% end %>